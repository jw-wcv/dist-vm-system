# Distributed VM System Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ALEPH NETWORK CONFIGURATION
# =============================================================================

# Your Aleph account private key (required for authenticated operations)
ALEPH_ACCOUNT_PRIVATE_KEY=your_private_key_here

# Aleph channel for your instances
ALEPH_CHANNEL=ALEPH-CLOUDSOLUTIONS

# Aleph node URL (optional, uses default if not set)
ALEPH_NODE_URL=https://46.255.204.193

# Aleph scheduler URL
SCHEDULER_URL=https://scheduler.api.aleph.cloud

# Aleph Docker image hash
ALEPH_IMAGE=4a0f62da42f4478544616519e6f5d58adb1096e069b392b151d47c3609492d0c

# =============================================================================
# NETWORK PORTS
# =============================================================================

# Cluster Manager API port
CLUSTER_MANAGER_PORT=3000

# Dashboard UI port
DASHBOARD_PORT=5173

# Worker API port
WORKER_API_PORT=8080

# Health check port
HEALTH_CHECK_PORT=3001

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API timeout in milliseconds
API_TIMEOUT=300000

# Maximum payload size
MAX_PAYLOAD_SIZE=100mb

# CORS origin
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# =============================================================================
# RESOURCE CONFIGURATION
# =============================================================================

# Default CPU cores per VM
DEFAULT_CPU=4

# Default memory per VM (MB)
DEFAULT_MEMORY=8192

# Default GPU count per VM
DEFAULT_GPU=0

# Maximum number of VM instances
MAX_INSTANCES=10

# Maximum concurrent tasks
MAX_CONCURRENT_TASKS=50

# =============================================================================
# TIMEOUT CONFIGURATION
# =============================================================================

# VM creation timeout (ms)
VM_CREATION_TIMEOUT=300000

# Task execution timeout (ms)
TASK_EXECUTION_TIMEOUT=1800000

# Health check timeout (ms)
HEALTH_CHECK_TIMEOUT=30000

# Node discovery timeout (ms)
NODE_DISCOVERY_TIMEOUT=60000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health check interval (ms)
HEALTH_CHECK_INTERVAL=30000

# Resource update interval (ms)
RESOURCE_UPDATE_INTERVAL=30000

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable metrics collection
ENABLE_METRICS=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Node environment
NODE_ENV=development

# Enable hot reload
ENABLE_HOT_RELOAD=true

# Enable debug logs
ENABLE_DEBUG_LOGS=false

# Simulate Aleph network (for testing)
SIMULATE_ALEPH_NETWORK=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable SSL
ENABLE_SSL=false

# SSL key path
SSL_KEY_PATH=

# SSL certificate path
SSL_CERT_PATH=

# JWT secret for authentication
JWT_SECRET=your-secret-key-here

# Enable authentication
ENABLE_AUTH=false

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Data directory
DATA_DIRECTORY=./data

# Logs directory
LOGS_DIRECTORY=./logs

# Temporary files directory
TEMP_DIRECTORY=./temp

# Backup directory
BACKUP_DIRECTORY=./backups

# SSH key directory
SSH_KEY_DIRECTORY=./config/keys

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker registry URL
DOCKER_REGISTRY_URL=

# Docker username
DOCKER_USERNAME=

# Docker password
DOCKER_PASSWORD=

# =============================================================================
# DATABASE CONFIGURATION (if using external database)
# =============================================================================

# Database URL
DATABASE_URL=

# Database name
DATABASE_NAME=dist_vm_system

# Database username
DATABASE_USERNAME=

# Database password
DATABASE_PASSWORD= 