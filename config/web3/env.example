# Web3 Configuration Environment Variables
# Copy this file to .env and fill in your values
# 
# ⚠️  SECURITY WARNING: Never commit private keys to version control!
# This file should be kept secure and not shared publicly.

# =============================================================================
# WALLET PRIVATE KEYS (REQUIRED)
# =============================================================================

# Aleph Network Private Key (Required for VM operations)
ALEPH_ACCOUNT_PRIVATE_KEY=your_aleph_private_key_here

# Ethereum Private Key (Optional - for additional blockchain operations)
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here

# Polygon Private Key (Optional - for Polygon network operations)
POLYGON_PRIVATE_KEY=your_polygon_private_key_here

# Arbitrum Private Key (Optional - for Arbitrum network operations)
ARBITRUM_PRIVATE_KEY=your_arbitrum_private_key_here

# =============================================================================
# NETWORK RPC ENDPOINTS
# =============================================================================

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/your-project-id

# Ethereum Goerli Testnet
ETHEREUM_GOERLI_RPC_URL=https://goerli.infura.io/v3/your-project-id
ETHEREUM_GOERLI_WS_URL=wss://goerli.infura.io/ws/v3/your-project-id

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_WS_URL=wss://polygon-rpc.com

# Polygon Mumbai Testnet
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_MUMBAI_WS_URL=wss://rpc-mumbai.maticvigil.com

# Arbitrum One
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_WS_URL=wss://arb1.arbitrum.io/ws

# Arbitrum Goerli Testnet
ARBITRUM_GOERLI_RPC_URL=https://goerli-rollup.arbitrum.io/rpc
ARBITRUM_GOERLI_WS_URL=wss://goerli-rollup.arbitrum.io/ws

# Aleph Network
ALEPH_RPC_URL=https://46.255.204.193
ALEPH_WS_URL=wss://46.255.204.193/ws

# Optimism
OPTIMISM_RPC_URL=https://mainnet.optimism.io
OPTIMISM_WS_URL=wss://mainnet.optimism.io

# Base
BASE_RPC_URL=https://mainnet.base.org
BASE_WS_URL=wss://mainnet.base.org

# =============================================================================
# WALLET SECURITY SETTINGS
# =============================================================================

# Enable wallet encryption (optional)
ENABLE_WALLET_ENCRYPTION=false

# Wallet encryption password (if enabled)
WALLET_ENCRYPTION_PASSWORD=your_encryption_password_here

# Wallet backup directory
WALLET_BACKUP_DIR=./config/web3/backups

# =============================================================================
# NETWORK PREFERENCES
# =============================================================================

# Default network for operations
DEFAULT_NETWORK=aleph

# Preferred networks for gas estimation
PREFERRED_GAS_NETWORKS=ethereum,polygon,arbitrum

# Network health check interval (seconds)
NETWORK_HEALTH_CHECK_INTERVAL=300

# =============================================================================
# GAS SETTINGS
# =============================================================================

# Default gas limit for transactions
DEFAULT_GAS_LIMIT=21000

# Gas price multiplier (for faster transactions)
GAS_PRICE_MULTIPLIER=1.1

# Maximum gas price (in Gwei)
MAX_GAS_PRICE_GWEI=100

# Priority fee (in Gwei)
PRIORITY_FEE_GWEI=2

# =============================================================================
# TRANSACTION SETTINGS
# =============================================================================

# Default transaction timeout (seconds)
TRANSACTION_TIMEOUT=300

# Number of transaction confirmations to wait
CONFIRMATION_BLOCKS=3

# Enable transaction monitoring
ENABLE_TX_MONITORING=true

# Transaction monitoring interval (seconds)
TX_MONITORING_INTERVAL=30

# =============================================================================
# API KEYS (OPTIONAL)
# =============================================================================

# Etherscan API Key (for transaction monitoring)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan API Key
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Arbiscan API Key
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Infura Project ID (if using Infura)
INFURA_PROJECT_ID=your_infura_project_id_here

# Alchemy API Key (if using Alchemy)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable testnet mode
ENABLE_TESTNET_MODE=false

# Default testnet
DEFAULT_TESTNET=ethereum-goerli

# Enable network simulation
ENABLE_NETWORK_SIMULATION=false

# Mock transaction responses (for testing)
MOCK_TRANSACTIONS=false

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Enable web3 transaction logging
ENABLE_WEB3_LOGGING=true

# Log level for web3 operations
WEB3_LOG_LEVEL=info

# Enable transaction analytics
ENABLE_TX_ANALYTICS=false

# Analytics endpoint
ANALYTICS_ENDPOINT=https://your-analytics-endpoint.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable private key validation
ENABLE_PRIVATE_KEY_VALIDATION=true

# Require wallet confirmation for large transactions
REQUIRE_WALLET_CONFIRMATION=true

# Large transaction threshold (in ETH)
LARGE_TX_THRESHOLD_ETH=1.0

# Enable transaction signing verification
ENABLE_TX_SIGNING_VERIFICATION=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Enable automatic wallet backup
ENABLE_AUTO_WALLET_BACKUP=true

# Backup frequency (hours)
WALLET_BACKUP_FREQUENCY=24

# Backup retention days
WALLET_BACKUP_RETENTION_DAYS=30

# Enable encrypted backups
ENABLE_ENCRYPTED_BACKUPS=true

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Enable MetaMask integration
ENABLE_METAMASK_INTEGRATION=false

# Enable WalletConnect integration
ENABLE_WALLETCONNECT_INTEGRATION=false

# WalletConnect project ID
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Enable hardware wallet support
ENABLE_HARDWARE_WALLET=false

# Hardware wallet type (ledger, trezor, etc.)
HARDWARE_WALLET_TYPE=ledger 